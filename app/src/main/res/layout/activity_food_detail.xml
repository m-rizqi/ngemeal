<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.FoodDetailActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/fooddetail_imageview_foodimage"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/nasi_goreng_large"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:id="@+id/fooddetail_imagebutton_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_action_back"
        android:background="@android:color/transparent"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="290dp"
        android:background="@drawable/radius40dp_rectangle_shape">

        <TextView
            android:id="@+id/fooddetail_textview_foodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="35dp"
            android:text="Nasi Goreng"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_w500_medium"
            android:textSize="24sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            />

        
        <TextView
            android:id="@+id/fooddetail_textview_totalnutrisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fooddetail_textview_foodname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Total Nutrisi"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/roboto_w500_medium"
            android:textSize="18sp"
            android:textColor="#99000000"
            android:letterSpacing="0.08"/>

        
        <LinearLayout
            android:id="@+id/fooddetail_linearlayout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fooddetail_textview_totalnutrisi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Energi"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:textSize="14sp"
                    android:letterSpacing="0.08"
                    android:textColor="#CC000000"
                    />

                <TextView
                    android:id="@+id/fooddetail_textview_kalori"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:letterSpacing="0.08"
                    android:text="500 kkal"
                    android:textColor="#CC000000"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Karbohidrat"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:textSize="14sp"
                    android:letterSpacing="0.08"
                    android:textColor="#CC000000"/>

                <TextView
                    android:id="@+id/fooddetail_textview_carb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40.02 g"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:textSize="14sp"
                    android:letterSpacing="0.08"
                    android:textColor="#CC000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Lemak Tubuh"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:textSize="14sp"
                    android:letterSpacing="0.08"
                    android:textColor="#CC000000"/>

                <TextView
                    android:id="@+id/fooddetail_textview_fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40.02 g"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:textSize="14sp"
                    android:letterSpacing="0.08"
                    android:textColor="#CC000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:textSize="14sp"
                    android:letterSpacing="0.08"
                    android:textColor="#CC000000"/>

                <TextView
                    android:id="@+id/fooddetail_textview_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40.02 g"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:textSize="14sp"
                    android:letterSpacing="0.08"
                    android:textColor="#CC000000"/>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fooddetail_button_makan"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fooddetail_linearlayout_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Makan"
            android:layout_marginTop="36dp"
            style="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/app_green"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_w400_regular"
            android:textSize="11sp"
            android:letterSpacing="0.10"
            android:textColor="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>