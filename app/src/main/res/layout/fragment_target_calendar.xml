<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.TargetCalendarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/targetcalendar_textview_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Target Nutrisi"
            android:fontFamily="@font/roboto_w500_medium"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.02"/>

        <RelativeLayout
            android:id="@+id/targetcalendar_relativelayout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/targetcalendar_textview_1"
            android:layout_marginTop="32dp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/targetcalendar_piechart_nutritionpie"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/targetcalendar_textview_amountkal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1920"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_w500_medium"
                    android:textSize="32sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kkal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_w400_regular"
                    android:textSize="18sp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/targetcalendar_relativelayout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/targetcalendar_relativelayout_1"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karbohidrat"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_w500_medium"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/targetcalendar_textview_amountofcarb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36 g"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_w500_medium"
                android:textSize="18sp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/targetcalendar_relativelayout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/targetcalendar_relativelayout_2"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lemak"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_w500_medium"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/targetcalendar_textview_amountoffat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36 g"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_w500_medium"
                android:textSize="18sp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/targetcalendar_relativelayout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/targetcalendar_relativelayout_3"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_w500_medium"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/targetcalendar_textview_amountofprotein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36 g"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_w500_medium"
                android:textSize="18sp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>