<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.UserProfileActivity"
    android:background="@color/app_green">

    <ImageButton
        android:id="@+id/userprofile_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_action_back"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="24dp"
        />
    <TextView
        android:id="@+id/userprofile_textview_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userprofile_button_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Profil"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_w500_medium"
        android:textSize="32sp"
        android:letterSpacing="0.02"
        android:layout_marginTop="6dp"
        />

    <RelativeLayout
        android:id="@+id/userprofile_relativelayout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userprofile_textview_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="40dp"
            android:layout_marginHorizontal="18dp"
            android:elevation="0dp"
            app:cardMaxElevation="0dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="371dp"
                android:paddingBottom="36dp">

                <TextView
                    android:id="@+id/userprofile_textview_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="54dp"
                    android:fontFamily="@font/roboto_w500_medium"
                    android:text="12.15 PM Juara 1"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/userprofile_textview_userheight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:text="Tinggi 167 cm"
                    android:textColor="#99000000"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userprofile_textview_username" />

                <TextView
                    android:id="@+id/userprofile_textview_userweight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:text="Berat 45 Kg"
                    android:textColor="#99000000"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userprofile_textview_userheight" />

                <View
                    android:id="@+id/userprofile_view_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:background="#33000000"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userprofile_textview_userweight" />

                <RelativeLayout
                    android:id="@+id/userprofile_relativelayout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="42dp"
                    app:layout_constraintTop_toBottomOf="@id/userprofile_view_1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/userprofile_apptextview_akunsaya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_w500_medium"
                        android:text="Akun saya"
                        android:textColor="#99000000"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/userprofile_button_akunsayaarrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/userprofile_relativelayout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    app:layout_constraintTop_toBottomOf="@id/userprofile_relativelayout_2">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/userprofile_apptextview_informasipribadi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_w500_medium"
                        android:text="Informasi Pribadi"
                        android:textColor="#99000000"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/userprofile_button_informasipribadiarrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/userprofile_relativelayout_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    app:layout_constraintTop_toBottomOf="@id/userprofile_relativelayout_3">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/userprofile_apptextview_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_w500_medium"
                        android:text="Keluar"
                        android:textColor="#99000000"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/userprofile_button_logoutarrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        </FrameLayout>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/userprofile_circleimage_userphoto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/ppuser"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:civ_border_width="10dp"
            app:civ_border_color="@color/white"
            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
