<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.auth.VerificationFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="48dp">

            <TextView
                android:id="@+id/verify_textview_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Verification"
                android:fontFamily="@font/roboto_w500_medium"
                android:textSize="24sp"
                android:textColor="#E50914"
                android:gravity="center"/>

        <TextView
            android:id="@+id/verify_textview_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/verify_textview_1"
            android:layout_marginTop="36dp"
            android:text="Enter the verification code we\njust sent you on your email\naddress"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto_w400_regular"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/verify_linearlayout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/verify_textview_2"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="36dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="52dp"
                android:layout_height="70dp"
                app:boxStrokeColor="@color/black_50_auth"
                app:boxStrokeWidthFocused="2dp"
                android:layout_marginHorizontal="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/verify_textinputedittext_otp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="52dp"
                android:layout_height="70dp"
                app:boxStrokeColor="@color/black_50_auth"
                app:boxStrokeWidthFocused="2dp"
                android:layout_marginHorizontal="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/verify_textinputedittext_otp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="52dp"
                android:layout_height="70dp"
                app:boxStrokeColor="@color/black_50_auth"
                app:boxStrokeWidthFocused="2dp"
                android:layout_marginHorizontal="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/verify_textinputedittext_otp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="52dp"
                android:layout_height="70dp"
                app:boxStrokeColor="@color/black_50_auth"
                app:boxStrokeWidthFocused="2dp"
                android:layout_marginHorizontal="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/verify_textinputedittext_otp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/verify_button_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/verify_linearlayout_3"
            android:layout_marginTop="36dp"
            android:text="Verify"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_w400_regular"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:letterSpacing="0.1"
            android:elevation="0dp"
            android:background="@drawable/green_round_auth"/>

        <LinearLayout
            android:id="@+id/verify_linearlayout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/verify_button_verify"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="22dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didnâ€™t receive the link ? "
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_w400_regular"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/verify_appcompattextview_resend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_w500_medium"
                android:text="Resend"
                android:textColor="#E50914"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>