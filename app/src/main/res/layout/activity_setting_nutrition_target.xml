<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.view.screening.SettingNutritionTargetActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            <ImageButton
                android:id="@+id/settingnutritiontarget_imagebutton_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/settingnutritiontarget_textview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settingnutritiontarget_imagebutton_back"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Profil Nutrisi"
                android:fontFamily="@font/roboto_w500_medium"
                android:textSize="32sp"
                android:textColor="#CC000000"
                android:layout_marginTop="8dp"
                android:letterSpacing="0.02"/>

            <RelativeLayout
                android:id="@+id/settingnutritiontarget_relativelayout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settingnutritiontarget_textview_1"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:textSize="12sp"
                    android:letterSpacing="0.08"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/outlinedbox_inputlayout">

                    <EditText
                        android:id="@+id/settingnutritiontarget_edittext_judul"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Target nutrisiku"
                        android:textColorHint="#33000000"
                        android:fontFamily="@font/roboto_w400_regular"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:background="@android:color/transparent"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settingnutritiontarget_relativelayout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settingnutritiontarget_relativelayout_1"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_w400_regular"
                    android:textSize="12sp"
                    android:letterSpacing="0.08"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/outlinedbox_inputlayout">

                    <EditText
                        android:id="@+id/settingnutritiontarget_edittext_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_w400_regular"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:maxLines="4"
                        android:padding="8dp"
                        android:background="@android:color/transparent"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/settingnutritiontarget_textview_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settingnutritiontarget_relativelayout_2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="36dp"
                android:text="Kamu dapat menggunakan "
                android:textColor="#99000000"
                android:fontFamily="@font/roboto_w400_regular"
                android:textSize="10sp"
                android:letterSpacing="0.04"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/settingnutritiontarget_appcompattextview_kalkulatornutrisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settingnutritiontarget_relativelayout_2"
                app:layout_constraintLeft_toRightOf="@id/settingnutritiontarget_textview_2"
                android:layout_marginTop="36dp"
                android:text="kalkulator nutrisi"
                android:textColor="@color/app_green"
                android:fontFamily="@font/roboto_w400_regular"
                android:textSize="10sp"
                android:letterSpacing="0.04"/>

            <TextView
                android:id="@+id/settingnutritiontarget_textview_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settingnutritiontarget_relativelayout_2"
                app:layout_constraintLeft_toRightOf="@id/settingnutritiontarget_appcompattextview_kalkulatornutrisi"
                android:layout_marginTop="36dp"
                android:text=" untuk"
                android:textColor="#99000000"
                android:fontFamily="@font/roboto_w400_regular"
                android:textSize="10sp"
                android:letterSpacing="0.04"/>

            <TextView
                android:id="@+id/settingnutritiontarget_textview_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settingnutritiontarget_textview_2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="36dp"
                android:text="membantu memperkirakan targetmu."
                android:textColor="#99000000"
                android:fontFamily="@font/roboto_w400_regular"
                android:textSize="10sp"
                android:letterSpacing="0.04"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/settingnutritiontarget_cardview_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settingnutritiontarget_textview_4"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="36dp"
                app:cardCornerRadius="8dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:backgroundTint="#1A000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="18dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_w400_regular"
                            android:letterSpacing="0.08"
                            android:text="Kalori"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@id/settingnutritiontarget_textview_5"
                            android:background="@drawable/outlinedbox_whitebackground"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/settingnutritiontarget_edittext_kalori"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_w400_regular"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="6dp"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/settingnutritiontarget_textview_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/roboto_w400_regular"
                            android:letterSpacing="0.08"
                            android:text="kkal"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="18dp"
                        android:background="#4D000000" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_w400_regular"
                            android:letterSpacing="0.08"
                            android:text="Karbohidrat"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@id/settingnutritiontarget_textview_6"
                            android:background="@drawable/outlinedbox_whitebackground"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/settingnutritiontarget_edittext_karbohidratfrom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_w400_regular"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="6dp"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/settingnutritiontarget_textview_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@id/settingnutritiontarget_view_1"
                            android:fontFamily="@font/roboto_w400_regular"
                            android:letterSpacing="0.08"
                            android:text="g"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <View
                            android:id="@+id/settingnutritiontarget_view_1"
                            android:layout_width="8dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="7dp"
                            android:layout_toLeftOf="@id/settingnutritiontarget_linearlayout_2"
                            android:background="@color/black" />

                        <LinearLayout
                            android:id="@+id/settingnutritiontarget_linearlayout_2"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@id/settingnutritiontarget_textview_7"
                            android:background="@drawable/outlinedbox_whitebackground"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/settingnutritiontarget_edittext_karbohidratto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_w400_regular"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="6dp"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/settingnutritiontarget_textview_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/roboto_w400_regular"
                            android:letterSpacing="0.08"
                            android:text="g"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_w400_regular"
                            android:letterSpacing="0.08"
                            android:text="Lemak tubuh"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@id/settingnutritiontarget_textview_8"
                            android:background="@drawable/outlinedbox_whitebackground"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/settingnutritiontarget_edittext_lemakfrom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_w400_regular"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="6dp"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/settingnutritiontarget_textview_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@id/settingnutritiontarget_view_2"
                            android:fontFamily="@font/roboto_w400_regular"
                            android:letterSpacing="0.08"
                            android:text="g"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <View
                            android:id="@+id/settingnutritiontarget_view_2"
                            android:layout_width="8dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="7dp"
                            android:layout_toLeftOf="@id/settingnutritiontarget_linearlayout_4"
                            android:background="@color/black" />

                        <LinearLayout
                            android:id="@+id/settingnutritiontarget_linearlayout_4"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@id/settingnutritiontarget_textview_9"
                            android:background="@drawable/outlinedbox_whitebackground"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/settingnutritiontarget_edittext_lemakto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_w400_regular"
                                android:maxLines="1"
                                android:padding="6dp"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/settingnutritiontarget_textview_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/roboto_w400_regular"
                            android:letterSpacing="0.08"
                            android:text="g"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_w400_regular"
                            android:letterSpacing="0.08"
                            android:text="Protein"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@id/settingnutritiontarget_textview_10"
                            android:background="@drawable/outlinedbox_whitebackground"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/settingnutritiontarget_edittext_proteinfrom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_w400_regular"
                                android:maxLines="1"
                                android:padding="6dp"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/settingnutritiontarget_textview_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@id/settingnutritiontarget_view_3"
                            android:fontFamily="@font/roboto_w400_regular"
                            android:letterSpacing="0.08"
                            android:text="g"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <View
                            android:id="@+id/settingnutritiontarget_view_3"
                            android:layout_width="8dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="7dp"
                            android:layout_toLeftOf="@id/settingnutritiontarget_linearlayout_6"
                            android:background="@color/black" />

                        <LinearLayout
                            android:id="@+id/settingnutritiontarget_linearlayout_6"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@id/settingnutritiontarget_textview_11"
                            android:background="@drawable/outlinedbox_whitebackground"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/settingnutritiontarget_edittext_proteinto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_w400_regular"
                                android:maxLines="1"
                                android:padding="6dp"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/settingnutritiontarget_textview_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/roboto_w400_regular"
                            android:letterSpacing="0.08"
                            android:text="g"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settingnutritiontarget_imagebutton_nextarrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="92dp"
                android:background="@drawable/round_green_shape"
                android:fontFamily="@font/roboto_w400_regular"
                android:gravity="center"
                android:letterSpacing="0.08"
                android:text="Simpan perubahan"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/settingnutritiontarget_cardview_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>