<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.dashboard.CalendarFragment"
    android:background="@color/app_green">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/calendar_relativelayout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp">

            <ImageButton
                android:id="@+id/calendar_button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_action_back"
                android:backgroundTint="@android:color/transparent" />

            <TextView
                android:id="@+id/calendar_textview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/calendar_button_back"
                android:text="Makan siang"
                android:fontFamily="@font/roboto_w500_medium"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:letterSpacing="0.02"/>

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calendar_button_saran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/calendar_relativelayout_1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="12dp"
            android:text="Saran"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_w500_medium"
            android:textSize="13sp"
            android:letterSpacing="0.02"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/app_green_dark"
            app:cornerRadius="10dp"
            android:gravity="center"
            android:elevation="0dp"
            app:elevation="0dp"
            android:drawableLeft="@drawable/ic_hot_plate" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calendar_button_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/calendar_relativelayout_1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="46dp"
            android:layout_marginTop="12dp"
            android:text="Target"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_w500_medium"
            android:textSize="13sp"
            android:letterSpacing="0.02"
            android:elevation="0dp"
            app:elevation="0dp"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/app_green"
            app:cornerRadius="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_target"
            app:strokeColor="@color/app_green"/>

        <FrameLayout
            android:id="@+id/calendar_frame_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/calendar_button_saran"
            android:background="@drawable/radius40dp_rectangle_shape"
            android:layout_marginTop="14dp"
            android:paddingBottom="70dp">

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>