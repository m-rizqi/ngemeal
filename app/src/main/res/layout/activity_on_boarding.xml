<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.view.OnBoardingActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/onBoarding_button_1"
        android:src="@drawable/logo_ngemeal_3_"
        />

    <TextView
        android:id="@+id/onBoarding_textview_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_w500_medium"
        android:text="Welcome to"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/onBoarding_textview_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/onBoarding_textview_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_w500_medium"
        android:text="NgeMeal"
        android:textSize="34sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/onBoarding_button_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onBoarding_textview_1"
        app:layout_constraintVertical_chainStyle="packed"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/onBoarding_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/onBoarding_textview_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Learn Your Meal Taste"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_w400_regular"
        android:textStyle="normal"
        android:textSize="14sp"
        android:letterSpacing="0.05"
        android:textAllCaps="false"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:layout_marginTop="28dp"
        android:elevation="0dp"
        style="@style/roundGreenBackground"
        tools:ignore="MissingClass" />

</androidx.constraintlayout.widget.ConstraintLayout>